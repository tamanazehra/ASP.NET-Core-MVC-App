@model IEnumerable<HabitTracker.Models.Habit>

@{
    ViewData["Title"] = "Your Habits";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Your Daily Habits</h2>
        <a class="btn btn-success" asp-action="Create">+ Add New Habit</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No habits logged yet. Start by adding one!</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var habit in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title">@habit.Name</h5>
                            <p class="card-text text-muted">@habit.Description</p>
                            <p class="card-text">
                                <small class="text-muted">Created: @habit.CreatedDate.ToString("MMMM dd, yyyy h:mm tt")</small>
                            </p>
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@habit.Id">Edit</a>
                                <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@habit.Id">Details</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@habit.Id">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
